        </Accordion>
      </div>

    </div>
  </section>
</DefaultLayout>

<style>
  .section-badge {
    display: flex;
    align-items: center;
  }

  .section-icon {
    color: #fff;
    background-color: #2563eb;
    border-color: #2563eb;
    font-size: 2.5em;
    font-weight: bold;
  }

  .section-heading {
    font-size: clamp(4rem, 1.5rem + 1vw, 2.75rem);
    font-weight: 900;
    text-decoration: underline;
    text-decoration-color: #2563eb;
    margin-bottom: 0.7rem;
  }

  .section-subtitle {
    color: var(--color-neutral-700);
    font-size: 1.15rem;
  }

  .value-grid :global(.card) {
    box-shadow: var(--elevation-2);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    border-color: #e2e8f0;
    background: var(--color-neutral-100);
  }

  .value-grid :global(.card:hover),
  .value-grid :global(.card:focus-within) {
    transform: translateY(-6px);
    box-shadow: var(--elevation-4);
    border-color: #2563eb;
  }
  
  :global(.value-feature [data-icon]) {
    color: #2563eb;
  }

  @media (max-width: 640px) {
    .section-badge {
      justify-content: flex-start;
    }
  }
</style>
