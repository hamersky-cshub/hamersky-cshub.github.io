<style>
  .ap-grid {
    display: grid;
    gap: var(--space-l);
  }

  .ap-grid--two {
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .ap-grid--four {
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .ap-panel {
    border: 2px solid var(--border-color-subtle);
    border-radius: var(--radius-l);
    padding: var(--space-l);
    background: var(--background-color);
    box-shadow: var(--elevation-1);
  }

  .ap-list {
    margin-top: var(--space-s);
    display: grid;
    gap: var(--space-2xs);
  }

  .ap-section {
    margin-top: var(--space-2xl);
  }

  .ap-section__header {
    display: grid;
    gap: var(--space-2xs);
    margin-bottom: var(--space-l);
  }

  .ap-section__subtitle {
    color: var(--color-neutral-700);
  }

  .ap-module {
    border: 3px solid var(--border-color-purple);
    border-radius: var(--radius-l);
    padding: var(--space-l);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(109, 40, 217, 0.2));
    box-shadow: var(--elevation-2);
    margin-bottom: var(--space-xl);
  }

  .ap-module__header {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-m);
    align-items: start;
  }

  .ap-badge {
    color: #fff;
    background-color: var(--brand-AP);
    border-color: color-mix(in oklab, var(--brand-AP), black 10%);
    font-size: var(--font-size-2);
    font-weight: 800;
    padding: var(--space-3xs) var(--space-xs);
  }

  .ap-goal {
    font-size: var(--font-size-0);
    margin-top: var(--space-2xs);
  }

  .ap-module__download {
    margin-top: var(--space-m);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-s);
    align-items: center;
    justify-content: space-between;
    padding: var(--space-s);
    border-radius: var(--radius-m);
    border: 2px dashed var(--border-color-purple);
    background: rgba(255, 255, 255, 0.6);
  }

  .ap-module__download .button {
    width: 30%;
    border-radius: 10px;
  }

  .ap-module__download p {
    margin: 0;
    font-weight: 400;
    width: 60%;
  }

  .ap-divider {
    margin: var(--space-l) 0 var(--space-m);
    display: flex;
    align-items: center;
    gap: var(--space-s);
    font-size: var(--font-size--1);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-neutral-700);
  }

  .ap-divider::before,
  .ap-divider::after {
    content: '';
    flex: 1;
    border-top: 1px solid var(--border-color-purple);
  }

  .ap-divider--center {
    justify-content: center;
  }

  .ap-divider--center::before,
  .ap-divider--center::after {
    flex: 0.6;
  }

  .ap-card {
    border: 2px solid var(--border-color-purple);
    border-radius: var(--radius-m);
    padding: var(--space-m);
    background: var(--background-color);
  }

  .ap-module-grid {
    margin-top: var(--space-l);
    display: grid;
    gap: var(--space-l);
    grid-template-columns: repeat(6, minmax(0, 1fr));
  }

  .ap-module-card {
    border: 2px solid var(--border-color-subtle);
    border-radius: var(--radius-l);
    padding: var(--space-m);
    background: var(--background-color);
    box-shadow: var(--elevation-1);
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    align-content: start;
  }

  .ap-card-text {
    color: var(--color-neutral-700);
  }

  .ap-card-button {
    width: 100%;
    justify-content: center;
    border-radius: 10px;
      margin-top: auto;
  }

  @media (max-width: 1200px) {
    .ap-module-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 768px) {
    .ap-module-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 480px) {
    .ap-module-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
