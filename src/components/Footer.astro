---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/learning-hub/introduction">Learning Hub</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Learning Modules</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/learning-hub/digital-citizenship/introduction">Digital Citizenship</a></li>
          <li><a href="/learning-hub/attacker-perspective/introduction">Attacker Perspective</a></li>
          <li><a href="/learning-hub/authentication/introduction">Authentication</a></li>
          <li><a href="/learning-hub/digital-privacy/introduction">Digital Privacy</a></li>
          <li><a href="/learning-hub/social-engineering/introduction">Social Engineering</a></li>
          <li><a href="/learning-hub/malware/introduction">Malware</a></li>
          <li><a href="/learning-hub/digital-abuse/introduction">Digital Abuse</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75]">
          Lorem ipsum.
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} - KidCy
      </p>
      <p>
        Made with support by <a href="https://erasmus-plus.ec.europa.eu/cs">Erasmus+</a>.
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
