---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import heroImg from '../assets/images/index/robot-intro.png'
import { Badge } from 'accessible-astro-components'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * The source URL for the image
   */
  src?: string
}

// const { src = '../assets/images/index/20945658.jpg' }: Props = Astro.props
---

<section class="hero mt-24 mb-12">
  <div class="container">
    <div class="grid grid-cols-1 items-center lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-9xl" style="font-weight: 900; z-index: 3; letter-spacing: 5px;">
          <slot><span style="color: #2563EB;">W</span>ise <span style="color: #2563EB">W</span>eb <span style="color: #2563EB">W</span>anderers</slot>
        </h1>
        <p class="text-3xl text-center md:text-left">
          Build smart, safe online habits with lessons, challenges, and games designed for upper elementary classrooms.
        </p>
        <div class="flex flex-col gap-3 min-[600px]:flex-row items-center">
          <a class="button has-icon" href="/learning-hub/introduction">
            <Icon name="lucide:graduation-cap" />
            Explore the Learning Hub
          </a>
          <a class="button has-icon is-outline" href="#learning-modules">
            <Icon name="lucide:blocks" />
            Browse Modules
          </a>
        </div>
      </div>
      <div style="z-index: 2;">
        <Image class="hidden lg:block floating-image" src={heroImg} alt="" decoding="async" loading="eager" />
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .floating-image {
    transform-origin: 55% 60%;
    will-change: transform;
    animation: wander-float 13s ease-in-out infinite;
    animation-delay: -2.4s;
  }

  .button {
    border-radius: 10px;
  }

  .hero-badge {
    color: #fff;
    background-color: #2563eb;
    border-color: #2563eb;
    font-weight: 800;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .button.is-outline {
    background: transparent;
    color: var(--link-color);
    border-color: var(--link-color);
  }

  .button.is-outline:hover,
  .button.is-outline:focus-visible {
    background: rgba(37, 99, 235, 0.1);
  }

  @keyframes wander-float {
    0% {
      transform: translate3d(0px, 0px, 0) rotate(0deg);
    }
    14% {
      transform: translate3d(4px, -5px, 0) rotate(0.25deg);
    }
    29% {
      transform: translate3d(-6px, -11px, 0) rotate(-0.35deg);
    }
    43% {
      transform: translate3d(5px, -8px, 0) rotate(0.3deg);
    }
    58% {
      transform: translate3d(-3px, -14px, 0) rotate(-0.2deg);
    }
    74% {
      transform: translate3d(6px, -9px, 0) rotate(0.35deg);
    }
    88% {
      transform: translate3d(-4px, -4px, 0) rotate(-0.25deg);
    }
    100% {
      transform: translate3d(0px, 0px, 0) rotate(0deg);
    }
  }

  .hero-image-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: stretch;
    justify-content: flex-end;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
