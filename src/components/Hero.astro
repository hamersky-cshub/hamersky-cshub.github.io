---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import heroImg from '../assets/images/index/robot-intro.png'
import { Badge } from 'accessible-astro-components'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * The source URL for the image
   */
  src?: string
}

// const { src = '../assets/images/index/20945658.jpg' }: Props = Astro.props
---

<section class="hero mt-24 mb-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-9xl" style="font-weight: 900; z-index: 3; letter-spacing: 5px;"> 
          <slot><span style="color: #2563EB; ">W</span>ise <span style="color: #2563EB">W</span>eb <span style="color: #2563EB">W</span>anderers</slot>
        </h1>
        <p class="text-3xl">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea <a href="https://hamersky-cshub.github.io/about/">About</a> consequat.</p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="/learning-hub/introduction">
            <Icon name="lucide:book-marked" />
            Start Learning
          </a>
        </div>
      </div>
      <div style="z-index: 2;">
      <Image class="hidden lg:block floating-image" src={heroImg} alt="" decoding="async" loading="eager" />
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .floating-image {
    animation: float 4s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-25px);
    }
  }

  .hero-image-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: stretch;
    justify-content: flex-end;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
